<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>


<Pane stylesheets="@styles/cardGameStyle.css" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.voidstack_overload.cardgame.controller.LoginController">
    <Pane prefHeight="400.0" prefWidth="200.0" styleClass="pane">
        <Label alignment="CENTER" layoutX="55.0" layoutY="25.0" styleClass="labelHead" text="Login or Die lolol"/>
        <TextField fx:id="usernameField" layoutX="10.0" layoutY="80.0" prefHeight="20.0" prefWidth="180.0"
                   promptText="username"/>
        <PasswordField fx:id="passwordField" layoutX="10.0" layoutY="130.0" prefHeight="20.0" prefWidth="180.0"
                       promptText="password"/>
        <Button layoutX="10.0" layoutY="290.0" mnemonicParsing="false" prefHeight="20.0"
                prefWidth="180.0" text="Login" onAction="#confirmLogin"/>
        <Button layoutX="10.0" layoutY="345.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="180.0"
                text="Register" onAction="#switchToRegister"/>
    </Pane>
</Pane>
