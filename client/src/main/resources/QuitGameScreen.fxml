<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane fx:id="QuitGameBox"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.voidstack_overload.cardgame.controller.QuitGameScreenController" stylesheets="@styles/style.css" maxWidth="1200" maxHeight="400">
    <top>
        <ImageView BorderPane.alignment="CENTER_LEFT" fx:id="corner1" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@textures/corner.png" />
            </image>
        </ImageView>
    </top>
    <center>
        <VBox fx:id = "quitGame" alignment="CENTER" spacing="35.0" maxWidth="1200" maxHeight="400">
            <Label fx:id = "quitGameText" text="Are you sure you want to quit the Game?" />
            <TilePane alignment="CENTER" hgap="20">
                <Button fx:id = "quitGameButton" text="Yes"></Button>
                <Button fx:id = "dontQuitGameButton" text="No"></Button>
            </TilePane>
        </VBox>
    </center>
    <bottom>
        <ImageView fx:id="corner2" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER_RIGHT">
            <image>
                <Image  url="@textures/corner.png" />
            </image>
        </ImageView>
    </bottom>
</BorderPane>

