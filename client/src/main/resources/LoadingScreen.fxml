<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="Loading" stylesheets="@styles/style.css" styleClass="background2" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.voidstack_overload.cardgame.controller.LoadingController">
    <top>
        <ImageView BorderPane.alignment="CENTER_LEFT" fx:id="cornerTop" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@textures/corner.png" />
            </image>
        </ImageView>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="35.0">
            <Label fx:id = "loadingText" text="loading"/>
            <ProgressBar fx:id="loadingBar" styleClass="rounded-progress">
            </ProgressBar>
        </VBox>
    </center>
    <bottom>
        <ImageView fx:id="cornerBottom" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER_RIGHT">
            <image>
                <Image  url="@textures/corner.png" />
            </image>
        </ImageView>
    </bottom>
</BorderPane>
