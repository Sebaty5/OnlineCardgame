<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane stylesheets="@styles/style.css" styleClass="background2"
           prefWidth="1920" prefHeight="1080"
           xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="de.voidstack_overload.cardgame.controller.CreditScreenController">
    <ImageView StackPane.alignment="TOP_LEFT" fx:id="cornerTop" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@textures/corner.png"/>
        </image>
    </ImageView>
    <VBox alignment="CENTER" spacing="50">
        <Text fx:id="header" styleClass="header" text="%credits"/>
        <Text fx:id="subtext"
              text="%creditText" textAlignment="CENTER"/>
        <Button fx:id="backButton" mnemonicParsing="false" styleClass="normalButton" text="%back" BorderPane.alignment="CENTER_LEFT"
                onAction="#switchToMenu"/>
    </VBox>
    <ImageView fx:id="cornerBottom" pickOnBounds="true" preserveRatio="true" StackPane.alignment="BOTTOM_RIGHT">
        <image>
            <Image url="@textures/corner.png"/>
        </image>
    </ImageView>
</StackPane>
