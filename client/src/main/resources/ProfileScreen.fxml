<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="200" prefHeight="1080" prefWidth="1920" styleClass="background" stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.voidstack_overload.cardgame.controller.ProfileScreenController">

    <VBox  alignment="CENTER"  GridPane.columnIndex="0" GridPane.rowIndex="0" >
        <HBox spacing="15">
            <Button styleClass="backButton" text="&lt;" visible="false" />
            <VBox fx:id="profilePanel" spacing="15" alignment="CENTER">
                <Label fx:id="profilePaneltext" text="Profile" />
                <TextField fx:id="profileText" editable="false" text="Username" />
                <Button mnemonicParsing="false" onAction="#switchToMainMenuAndLogout" styleClass="secondaryButton" text="Log out" />
                <Button mnemonicParsing="false" styleClass="secondaryButton" text="Settings" />
            </VBox>
        </HBox>
    </VBox>
    <VBox fx:id="hostPanel" styleClass="hostPanel" alignment="CENTER" spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <Button mnemonicParsing="false" onAction="#switchToLobbySettings" styleClass="normalButton" text="Host" />
        <Button mnemonicParsing="false" onAction="#switchToLobbyList" styleClass="normalButton" text="Join" />
    </VBox>
</GridPane>
