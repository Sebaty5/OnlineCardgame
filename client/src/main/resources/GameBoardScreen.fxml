<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            prefWidth="1920" prefHeight="1080"
            fx:controller="de.voidstack_overload.cardgame.controller.GameBoardScreenController"
            stylesheets="@styles/style.css" styleClass="background">

    <top>
        <AnchorPane minHeight="80" prefHeight="100" style="-fx-background-color: blue">
            <HBox spacing="28" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="16">
                <Button fx:id="settingsButton"
                        text="Settings"
                        onAction="#openSettings"
                        styleClass="normalButton"/>
                <Button fx:id="leaveButton"
                        text="Leave"
                        onAction="#lobbyLeave"
                        styleClass="normalButton"/>
            </HBox>
        </AnchorPane>
    </top>

    <!-- ═════════════ LEFT COLUMN ─ score + stacks ════════════════ -->
    <left>
        <VBox spacing="12" alignment="TOP_CENTER" BorderPane.alignment="CENTER" style="-fx-background-color: red" prefWidth="100" prefHeight="Infinity">
            <padding><Insets top="40" right="20" bottom="0" left="40"/></padding>

            <FlowPane alignment="CENTER"  style="-fx-background-color: orange">
                <ImageView fx:id="trumpColorImage" fitWidth="72" preserveRatio="true"/>
                <StackPane>
                    <ImageView fx:id="cardStack" fitWidth="182" preserveRatio="true">
                    </ImageView>
                    <Label fx:id="cardStackLabel" text="42" styleClass="stackLabel"/>
                </StackPane>
            </FlowPane>
        </VBox>
    </left>

    <center>
        <StackPane BorderPane.alignment="TOP_CENTER" style="-fx-background-color: green">
            <GridPane fx:id="stackArea" hgap="20" vgap="8" alignment="CENTER" style="-fx-background-color: cyan">
                <padding><Insets top="40" right="40" bottom="20" left="40"/></padding>
                <columnConstraints>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="34"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>


                <FlowPane hgap="20" vgap="8" alignment="CENTER" styleClass="cardStackSection" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <ImageView fx:id="smallStack11" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/frame.png"/>
                    </ImageView>
                    <ImageView fx:id="smallStack12" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/cards/card_back_lowsat.png"/>
                    </ImageView>
                </FlowPane>

                <FlowPane hgap="20" vgap="8" alignment="CENTER" styleClass="cardStackSection" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <ImageView fx:id="smallStack21" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/frame.png"/>
                    </ImageView>
                    <ImageView fx:id="smallStack22" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/cards/card_back_lowsat.png"/>
                    </ImageView>
                </FlowPane>

                <FlowPane hgap="20" vgap="8" alignment="CENTER" styleClass="cardStackSection" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <ImageView fx:id="smallStack31" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/frame.png"/>
                    </ImageView>
                    <ImageView fx:id="smallStack32" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/cards/card_back_lowsat.png"/>
                    </ImageView>
                </FlowPane>

                <FlowPane hgap="20" vgap="8" alignment="CENTER" styleClass="cardStackSection" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <ImageView fx:id="smallStack41" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/frame.png"/>
                    </ImageView>
                    <ImageView fx:id="smallStack42" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/cards/card_back_lowsat.png"/>
                    </ImageView>
                </FlowPane>

                <FlowPane hgap="20" vgap="8" alignment="CENTER" styleClass="cardStackSection" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <ImageView fx:id="smallStack51" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/frame.png"/>
                    </ImageView>
                    <ImageView fx:id="smallStack52" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/cards/card_back_lowsat.png"/>
                    </ImageView>
                </FlowPane>

                <FlowPane hgap="20" vgap="8" alignment="CENTER" styleClass="cardStackSection" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <ImageView fx:id="smallStack61" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/frame.png"/>
                    </ImageView>
                    <ImageView fx:id="smallStack62" fitWidth="128" preserveRatio="true">
                        <Image url="@textures/cards/card_back_lowsat.png"/>
                    </ImageView>
                </FlowPane>

            </GridPane>

            <!-- ❷ defend / take prompt (slightly below row) -->
            <Label fx:id="defendOrTakeLabel"
                   StackPane.alignment="BOTTOM_CENTER"
                   translateY="-160"
                   styleClass="defendOrTakeLabel"/>
        </StackPane>
    </center>

    <!-- ═════════════ BOTTOM BAR ─ player hand + actions ═════════ -->
    <bottom>
        <VBox spacing="20" BorderPane.alignment="CENTER" style="-fx-background-color: yellow">
            <padding><Insets top="0" right="0" bottom="40" left="0"/></padding>

            <!-- dynamic card buttons get added here -->
            <StackPane maxHeight="180" style="-fx-background-color: pink">
                <FlowPane fx:id="playerHand" vgap="8" hgap="20" alignment="CENTER">

                </FlowPane>
            </StackPane>

            <HBox spacing="60" alignment="CENTER">
                <Button fx:id="takeOrPassButton" text="Take" styleClass="actionButton" onAction="#takeOrPassAction"/>
            </HBox>
        </VBox>
    </bottom>

    <!-- ═════════════ RIGHT PANEL ─ lobby + chat ═════════════════ -->
    <right>
        <VBox fx:id="lobbyInfoPane" spacing="24" prefWidth="360" BorderPane.alignment="CENTER" styleClass="chatOutput" style="-fx-background-color: purple" >
            <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>

            <!-- header -->
            <Label text="Waiting 1/6" styleClass="panelHeader"/>

            <!-- players (labels added dynamically) -->
            <VBox fx:id="playerInfoPane" spacing="10"/>

            <!-- close‑lobby ( X ) button, optional -->
            <Button fx:id="closeSlotBtn" text="×" styleClass="closeSlotButton"
                    visible="false"/>

            <!-- chat -->
            <Label fx:id="chatLabel" text="Chat" styleClass="panelHeader"/>
            <TextArea fx:id="chatHistory" editable="false" prefRowCount="6"/>

            <TextField fx:id="chatTextInputField"
                       promptText="Write something…"
                       onAction="#checkButtonAvailability"/>

            <Button fx:id="sendText"
                    text="Send"
                    onAction="#sendChatMessage"
                    styleClass="chatSendButton"/>
        </VBox>
    </right>

</BorderPane>
