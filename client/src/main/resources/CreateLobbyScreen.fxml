<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Slider?>

<Pane stylesheets="@styles/cardGameStyle.css" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.voidstack_overload.cardgame.controller.CreateLobbyController">
    <Pane prefHeight="400.0" prefWidth="200.0" styleClass="pane">
        <Label alignment="CENTER" layoutX="55.0" layoutY="25.0" styleClass="labelHead" text="Create Lobby"/>
        <TextField fx:id="lobbyName" layoutX="10.0" layoutY="80.0" prefHeight="20.0" prefWidth="180.0"
                   promptText="Lobby Name"/>
        <PasswordField fx:id="lobbyPassword" layoutX="10.0" layoutY="130.0" prefHeight="20.0" prefWidth="180.0"
                       promptText="Lobby Password"/>
        <Slider fx:id="maxPlayers" layoutX="10.0" layoutY="180.0" prefHeight="20.0" prefWidth="180.0" min="2" max="6"
                majorTickUnit="2" minorTickCount="1" blockIncrement="1"
                showTickMarks="true" showTickLabels="true" snapToTicks="true"/>
        <Slider fx:id="botAmount" layoutX="10.0" layoutY="230.0" prefHeight="20.0" prefWidth="180.0" min="2" max="6"
                majorTickUnit="2" minorTickCount="1" blockIncrement="1"
                showTickMarks="true" showTickLabels="true" snapToTicks="true"/>
        <Button layoutX="10.0" layoutY="290.0" mnemonicParsing="false" prefHeight="20.0"
                prefWidth="180.0" text="Play" onAction="#createLobby"/>
        <Button layoutX="10.0" layoutY="345.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="180.0"
                text="Back" onAction="#switchToHome"/>
    </Pane>
</Pane>
